						</div>
					</div>
					
					
					
					
					<div class="new_cart_main">
						<div class="name_cart">State</div>
						<div class="name_cart_input"><input type="text" id="state"  name="from_state" value="<% if !@user.blank? %><%= @user.state  %><% end %>" >
						
						</div>
					</div>
					
						
					
					
					<div class="new_cart_main">
						<div class="name_cart">Country</div>
						<div class="name_cart_input">
						<%#=  @user.country %>
						<% if @user %>
						<% if !@user.country.blank? %>
					 <%= country_select("from_country", "country", @user.country,{},:style => 'width:350px;',:name => "mycountry") %>
						<% else %>
	               <%= country_select("from_country", "country", nil,{:include_blank => "Select Country"},:style => 'width:350px;',:name => "mycountry") %>
					<% end %>	
					
					<% else %>
	               <%= country_select("from_country", "country", nil,{:include_blank => "Select Country"},:style => 'width:350px;',:name => "mycountry") %>
					<% end %>	
					
						</div>
					</div>
					
					
					
					
